{
  "name": "@pingops/sdk",
  "version": "0.1.2",
  "type": "module",
  "engines": {
    "node": ">=20"
  },
  "description": "PingOps SDK for Node.js",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./register": {
      "types": "./dist/register.d.mts",
      "import": "./dist/register.mjs",
      "require": "./dist/register.cjs"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "pingops",
    "monitoring",
    "observability",
    "opentelemetry",
    "sdk",
    "nodejs"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm build"
  },
  "dependencies": {
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/resources": "^2.2.0",
    "@opentelemetry/sdk-node": "^0.208.0",
    "@opentelemetry/sdk-trace-node": "^2.2.0",
    "@opentelemetry/semantic-conventions": "^1.38.0",
    "@pingops/otel": "workspace:^",
    "@pingops/core": "workspace:^",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/js-yaml": "^4.0.9",
    "axios": "^1.6.2",
    "tsx": "^4.7.0",
    "typescript": "^5.6.0"
  }
}
