{
  "git": {
    "commitMessage": "chore: release v${version}",
    "tagName": "v${version}",
    "requireCleanWorkingDir": true,
    "requireUpstream": false,
    "requireCommits": true
  },
  "github": {
    "release": true,
    "releaseName": "v${version}"
  },
  "npm": {
    "publish": false
  },
  "hooks": {
    "before:init": ["pnpm build", "pnpm lint"],
    "after:release": "echo 'Release ${version} completed successfully!'"
  },
  "plugins": {
    "@release-it/bumper": {
      "in": "package.json",
      "out": ["package.json", "packages/*/package.json"],
      "dependencies": {
        "@pingops/core": "*",
        "@pingops/otel": "*",
        "@pingops/sdk": "*"
      }
    }
  }
}
