{
  "name": "pingops-js",
  "version": "0.1.3",
  "type": "module",
  "private": false,
  "description": "PingOps Node.js SDK - OpenTelemetry-compatible monitoring for API calls",
  "scripts": {
    "build": "pnpm -r run build",
    "dev": "pnpm -r run dev",
    "clean": "pnpm -r run clean",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,json,md}\"",
    "docs:build": "typedoc",
    "nuke": "pnpm clean && rm -rf node_modules && rm -rf packages/*/node_modules && pnpm install",
    "publish:core": "pnpm --filter @pingops/core publish",
    "publish:otel": "pnpm --filter @pingops/otel publish",
    "publish:sdk": "pnpm --filter @pingops/sdk publish",
    "publish:all": "pnpm publish:core && pnpm publish:otel && pnpm publish:sdk",
    "release": "tag=latest release-it",
    "release:alpha": "tag=alpha release-it --preRelease=alpha",
    "release:beta": "tag=beta release-it --preRelease=beta",
    "release:rc": "tag=rc release-it --preRelease=rc",
    "release:dry-run": "release-it --dry-run",
    "version:patch": "pnpm -r version patch",
    "version:minor": "pnpm -r version minor",
    "version:major": "pnpm -r version major"
  },
  "devDependencies": {
    "@release-it/bumper": "^7.0.5",
    "@types/node": "^20.11.0",
    "@eslint/js": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.4.0",
    "release-it": "19.2.3",
    "typescript-eslint": "^8.0.0",
    "typedoc": "^0.26.0",
    "tsdown": "^0.19.0",
    "typescript": "^5.6.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
